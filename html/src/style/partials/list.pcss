.ul-list {
    margin-bottom: calc($gutter-step * 2);

    ul, ol {
        margin: calc($gutter-step * 2) 0;
    }

    li {
        position: relative;
        margin-bottom: calc($gutter-step * 0.5);
        padding-left: calc($gutter-step * 2);
    }

    & > li,
    ul > li {
        &:before {
            content: '';
            background: $cl-global-invert;
            display: inline-block;
            position: absolute;
            top: 11px;
            left: 0;
            width: 4px;
            height: 4px;
            border-radius: 50%;
        }
    }
}

.ol-list {
    counter-reset: olCounter;
    margin-bottom: $gutter;

    ol, ul {
        counter-reset: olCounter;
        margin: calc($gutter-step * 2) 0;
    }

    li {
        position: relative;
        margin-bottom: calc($gutter-step * 2);
        padding-left: calc($gutter-step * 3);
    }

    & > li,
    ol > li {
        &:before {
            counter-increment: olCounter;
            content: counter(olCounter) '.';
            display: inline-block;
            position: absolute;
            left: 0;
        }
    }
}
